package code {		// handles all of the game's important methods	// manages all of the GameElement objects		public class Game extends Screen{		var gameGrid:Array; // represents the tile grid - use [row][col] to access cells		var doc:Document; // reference to the base document		public function Game(aDoc:Document) {			// constructor code			doc=aDoc;						setUpGrid(); // create the grid		}				public function setUpGrid(){			gameGrid=new Array(Constants.GRID_HEIGHT); // create rows			for(var i:int=0;i<Constants.GRID_HEIGHT;i++){ // step through rows				gameGrid[i]=new Array(Constants.GRID_WIDTH); // add columns to each row				for(var j:int=0;j<Constants.GRID_WIDTH;j++){ // step through columns					var aPath = new Path(this); // create empty square					aPath.x=i*Constants.TILESIZE_X; // set proper x coordinate					aPath.y=j*Constants.TILESIZE_Y; // set proper y coordinate					gameGrid[i][j] = aPath; // add tile to the grid					doc.addChild(aPath); // add tile to the document					trace(i + " " + j + " generated"); // trace out location				}			}		}	}	}